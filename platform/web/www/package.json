{
  "name": "sourcerenderer-web-site",
  "version": "0.1.0",
  "description": "Render source engine maps in the browser",
  "main": "index.js",
  "scripts": {
    "build_rust": "cd ../lib && RUSTFLAGS='-C target-feature=+atomics,+bulk-memory,+mutable-globals' wasm-pack build -- -Z build-std=std,panic_abort",
    "build": "webpack --config webpack.dev.js",
    "start": "webpack serve --config webpack.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/K0bin/SourceRenderer.git"
  },
  "keywords": [
    "webassembly",
    "wasm",
    "rust",
    "webpack"
  ],
  "author": "Robin Kertels <robin.kertels@gmail.com>",
  "license": "(MIT)",
  "bugs": {
    "url": "https://github.com/K0bin/SourceRenderer/issues"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^9.0.1",
    "sourcerenderer_web": "file:../lib/pkg",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.1.0",
    "workbox-webpack-plugin": "^6.2.4"
  }
}
